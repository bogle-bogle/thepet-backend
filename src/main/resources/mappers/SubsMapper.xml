<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thehyundai.thepet.subscription.SubsMapper">

    <insert id="saveCurationSubscription" useGeneratedKeys="true" parameterType="SubscriptionVO">
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            SELECT SUBSCRIPTION_SEQ.currval From DUAL
        </selectKey>
        INSERT INTO SUBSCRIPTION (START_DATE, END_DATE, MEMBER_ID, CURATION_ID, PRODUCT_ID, CURATION_YN)
        VALUES (#{startDate}, NULL, #{memberId}, #{curationId}, #{productId}, #{curationId})
    </insert>

    <select id="findSubscription" resultType="SubscriptionVO">
        SELECT * FROM SUBSCRIPTION
    </select>

</mapper>