<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thehyundai.thepet.domain.review.ReviewMapper">
    <select id="selectAllReviews" parameterType="int" resultType="ReviewVO">
        SELECT * FROM REVIEW
        WHERE product_id = #{product_id}
    </select>

    <select id="selectReviewDetail" parameterType="int" resultType="ReviewVO">
        SELECT * FROM REVIEW
        WHERE id = #{id}
    </select>
</mapper>