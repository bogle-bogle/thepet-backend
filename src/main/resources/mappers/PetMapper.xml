<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thehyundai.thepet.domain.mypet.pet.PetMapper">

    <insert id="registerClub" parameterType="PetVO">
            CALL InsertPetWithAllergies
            (#{photo},#{name},#{birth},#{memberId},#{favoriteFoodIngredients},#{imgUrl},#{mbti},#{breedCode},#{animalTypeCode},#{proteinCode})
            <selectKey keyProperty="id" resultType="Integer" order="AFTER">
                SELECT PET_SEQ.CURRVAL FROM DUAL
            </selectKey>
    </insert>

    <update id="updateFeed" parameterType="PetVO">
        UPDATE PET
        SET favorite_food_ingredients = #{favoriteFoodIngredients}
        WHERE id = #{id}
    </update>

    <select id="myPet" parameterType="Integer" resultType="PetVO">
        SELECT *
        FROM PET
        WHERE member_id = #{memberId}
    </select>

    <select id="findPetsWithAllergiesByMemberId" parameterType="Integer" resultMap="PetsWithAllegies">
        SELECT p.id, p.name, a.protein_code
        FROM PET p
             LEFT JOIN ALLERGY a ON p.id = a.pet_id
        WHERE p.MEMBER_ID = #{memberId}
    </select>

    <resultMap id="PetsWithAllegies" type="PetSimpleVO">
        <id property="petId" column="id" />
        <result property="petName" column="name" />
        <collection property="allergies" javaType="java.util.List" ofType="String">
            <result property="proteinCode" column="protein_code" />
        </collection>
    </resultMap>

</mapper>