<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thehyundai.thepet.member.MemberMapper">
    <select id="login" parameterType="long" resultType="MemberVO">
        SELECT * FROM member
        WHERE social_id = #{socialId}
    </select>
    <insert id="register" parameterType="MemberVO" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO member (name, email, img_url, nickname, social_id) VALUES (#{name}, #{email}, #{imgUrl}, #{nickname}, #{socialId})
    </insert>
</mapper>